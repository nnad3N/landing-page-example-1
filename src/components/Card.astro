---
export interface Props {
  content: {
    name: string;
    description: string;
    img: string;
  };
}

const {
  content: { name, description, img },
} = Astro.props;
---

<div class="max-w-xs md:max-w-sm flex flex-col items-center justify-center md:flex-row">
  <div class="w-16 h-16 aspect-square rounded-full mb-2 md:mb-0 md:mr-8 bg-gray-300"></div>
  <div>
    <h3 class="text-lg font-medium text-center md:text-left">{name}</h3>
    <p class="text-sm text-justify">
      {description}
    </p>
  </div>
</div>
