---
import { PhoneIcon } from "@heroicons/react/24/outline";
import SectionLayout from "../../layouts/SectionLayout.astro";
---

<SectionLayout class="mt-6 lg:mt-20 flex max-w-md flex-col lg:flex-row lg:items-center lg:justify-between">
  <div class="flex flex-col font-display text-6xl max-[420px]:text-[14vw] lg:text-7xl">
    <h1>LOREM</h1>
    <h1 class="tracking-special text-accent">IPSUM</h1>
  </div>
  <div class="text-sm md:text-base">
    <p class="mt-4 text-justify leading-snug md:max-w-[30rem] lg:mt-0">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt quasi sapiente velit inventore commodi ad nostrum
      autem porro dicta. Dolor.
    </p>
    <h2 class="mt-2 font-medium">Lorem ipsum dolor sit.</h2>
    <div class="flex items-center font-medium">
      <PhoneIcon className="h-5 w-5 mr-2 stroke-2" />
      <span data-encrypted={btoa("(+48) 111 111 111")}></span>
    </div>
  </div>
</SectionLayout>
