---
import "@fontsource/titan-one";
import "@fontsource/poppins";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/500.css";
import "../styles/base.css";
import Logo from "../components/Logo.astro";
import Navigation from "../components/Navigation";
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Przyjazny Logopeda</title>
  </head>
  <body>
    <header class="mx-auto flex w-full items-center justify-between py-4 px-5 lg:max-w-6xl">
      <Logo />
      <Navigation client:media="(max-width: 768px)" />
    </header>
    <slot />
    <footer
      class="mt-6 flex items-center justify-between gap-y-3 px-5 py-4 max-[390px]:flex-col-reverse sm:justify-center lg:mt-12"
    >
      <Logo accented={true} />
      <p class="ml-6 text-sm font-light leading-tight">
        oligofrenopedagog
        <br />
        mgr Grażyna Wójcik
      </p>
    </footer>
  </body>
</html>

<script>
  const elements = document.querySelectorAll("span[data-encrypted]");

  elements.forEach((element) => {
    element.textContent = atob(element.getAttribute("data-encrypted") ?? "");
    element.removeAttribute("data-encrypted");
  });
</script>
